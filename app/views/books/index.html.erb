<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <table class="table">
        <h2>User info</h2>
        <tbody><tr></tr>
          <%= image_tag @user.get_profile_image(100,100) %>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>Introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
        </tbody>
      </table>

      <div class="row" >
        <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary btn-block edit_user_23316" do %>
          <i class ="fas fa-user-cog"></i>
        <% end %>
      </div>
    </div>

<div class="col-md-8 offset-md-1">
  		<h2>Books</h2>

  		<table class="table">
  		<thead>
  		  <tr>
  		    <th></th>
  		    <th>Title</th>
  		    <th>Opinion</th>
  		    <th></th>
  		  </tr>
  		</thead>
  		  <tbody>
  		  <% @books.each do |book| %>
  		  <tr>
  		  <td><%= link_to user_path(book.user) do %>
  		  <%= image_tag book.user.get_profile_image(100,100) %><%end%></td>
          <td><span>
          <%= link_to book.title, book_path(book.id) %>
          </span>
          </td>
          <td>
          <%= book.body %>
          </td>
        </tr>
        <% end %>
      </tbody></table>
    </div>

</table>
<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br><br>

  <%= f.submit 'Create Book' %>
<% end %>

