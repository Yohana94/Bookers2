
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
     <%= image_tag @user.get_profile_image(100,100) %>
   <table>
  <tbody><tr></tr>
  <tr>
  <th>name</th>
	<p><%= @user.name %></p>
  </tr>
  <tr>
  <th>Introduction</th>
  <p><%= @user.introduction %></p>
  </tr>

</tbody>
</table>

  <div class="row" >
  <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary btn-block edit_user_23316" do %>
  <i class ="fas fa-user-cog"></i>
  <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: Book.new do |f| %>
  <div class="form-group">
  <label for="book_title">Title</label>
  <%= f.text_field :title %>
  </div>
  <div class="form-group">
  <label for="book_opinion">Opinion</label>
  <%= f.text_area :body %>
  </div>

   <div class="row">
  <div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
   </div>
   </form>
   <% end %>
  </div>
</form>
</div>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover table-inverse">
 <thead>

    <tr>
      <th><strong>Title<strong></th>
      <th><strong>Opinion<strong></th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
<div class="book-wrap">
<% @books.each do |book| %>
<div class="book-box">
<div class="book-comment">
    <tr>
      <td><%= link_to user_path(book.user) do %>
  		  <%= image_tag book.user.get_profile_image(100,100) %><%end%></td>
      <td><span class="book-title"><%= link_to book.title, book_path(book.id)%></span></td>
      <td><span class="book-body"><%= book.body %></span></td>
    </tr>
</div>
</div>

<% end %>
</table>
</div>
